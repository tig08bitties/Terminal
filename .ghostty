# =====================================================
# Ghostty Terminal Configuration
# SUSE Black/Green Classic Theme
# Eternal Covenant Terminal
# =====================================================

# Font Configuration
font-family = Monospace
font-size = 13

# SUSE Classic Black/Green Theme
background = 000000
foreground = 00ff00

# Cursor Configuration
cursor-style = block
cursor-color = ffffff

# Window Configuration
window-width = 125
window-height = 30
window-padding-x = 4
window-padding-y = 4

# Title
title = SUSE Ghostly Terminal - Eternal Covenant

# Scrollback
scrollback-limit = 10000

# Shell Integration
shell-integration = true

# Copy on Select
copy-on-select = true

# Theme
theme = dark
